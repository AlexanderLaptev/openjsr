<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.openjsr.app.MainWindowController"
            prefWidth="1280.0"
            prefHeight="720.0"
            stylesheets="/stylesheets/main_window.css">

    <!-- Верхнее меню -->
    <MenuBar id="menuBar"
             AnchorPane.leftAnchor="0"
             AnchorPane.rightAnchor="0"
             AnchorPane.topAnchor="0">
        <Menu text="Файл">
            <MenuItem text="Открыть" onAction="#handleSettingsButton1"/>
            <MenuItem text="Сохранить" onAction="#handleSettingsButton1"/>
            <MenuItem text="Выход" onAction="#handleSettingsButton1"/>
        </Menu>

        <Menu text="Помощь">
            <MenuItem text="О программе" onAction="#handleHelpButton1"/>
        </Menu>

    </MenuBar>

    <!-- Canvas для взаимодействия с другим кодом -->
    <Canvas id="mainCanvas"
            width="1000.0"
            height="700.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="25.0"/>

    <!-- Сайдбар справа -->
    <StackPane id="rightSidebar"

               AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="25.0">
        <VBox spacing="10">

            <Label text="Редактирование модели  " alignment="TOP_CENTER"/>
            <!-- Добавьте свои элементы меню здесь -->
            <Button text="кнопка 1"/>
            <Button text="кнопка 1"/>
            <Button text="кнопка 1"/>

        </VBox>
    </StackPane>

</AnchorPane>